{
    "editor.defaultFormatter": "vknabel.vscode-swiftformat",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always"
    },
    "files.exclude": {
        ".dist": true,
        "**/.dist": true,
        ".build": true,
    },
    "search.exclude": {
        ".dist": true,
        "**/.dist": true,
        ".build": true,
        "DerivedData": true
    },
    "explorer.excludeGitIgnore": true,
    "sweetpad.build.xcodeWorkspacePath": ".swiftpm/xcode/package.xcworkspace"
}