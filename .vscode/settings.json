{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": "always",
        "source.fixAll.swiftlint": "always"
    },
    "files.exclude": {
        ".dist": true,
        "**/.dist": true,
        // ".build": true,
    },
    "search.exclude": {
        ".dist": true,
        "**/.dist": true,
        ".build": true,
        "DerivedData": true
    },
    "explorer.excludeGitIgnore": true,
    "[swift]": {
        "editor.defaultFormatter": "vknabel.vscode-swiftformat",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.swiftlint": "always"
        }
    },
}